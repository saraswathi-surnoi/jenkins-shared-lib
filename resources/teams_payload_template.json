{
  "@type": "MessageCard",
  "@context": "https://schema.org/extensions",
  "summary": "${BUILD_STATUS}: ${JOB_NAME} Build #${BUILD_NUMBER}",
  "themeColor": "${THEME_COLOR}",
  "title": "${BUILD_STATUS} - ${JOB_NAME}",
  "sections": [
    {
      "activityTitle": "Jenkins Pipeline Notification",
      "activitySubtitle": "Project: ${JOB_NAME}",
      "facts": [
        { "name": "Status", "value": "${BUILD_STATUS}" },
        { "name": "Build Number", "value": "${BUILD_NUMBER}" },
        { "name": "Triggered By", "value": "${BUILD_USER}" },
        { "name": "Result", "value": "${RESULT}" },
        { "name": "Duration", "value": "${DURATION}" },
        { "name": "Version", "value": "${APP_VERSION}" },
        { "name": "Docker Image", "value": "${DOCKER_IMAGE}" }
      ],
      "markdown": true
    }
  ],
  "potentialAction": [
    {
      "@type": "OpenUri",
      "name": "üîç View Jenkins Build",
      "targets": [
        { "os": "default", "uri": "${BUILD_URL}" }
      ]
    },
    {
      "@type": "OpenUri",
      "name": "üìä View SonarQube Dashboard",
      "targets": [
        { "os": "default", "uri": "${SONAR_URL}" }
      ]
    },
    {
      "@type": "OpenUri",
      "name": "üê≥ View ECR Repository",
      "targets": [
        { "os": "default", "uri": "${ECR_LINK}" }
      ]
    }
  ]
}
